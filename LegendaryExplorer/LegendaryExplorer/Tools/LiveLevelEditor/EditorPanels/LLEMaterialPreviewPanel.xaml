<UserControl x:Class="LegendaryExplorer.Tools.LiveLevelEditor.EditorPanels.LLEMaterialPreviewPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LegendaryExplorer.Tools.LiveLevelEditor.EditorPanels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <CheckBox IsChecked="{Binding AutoUpdate}" Content="Auto preview on changes"/>
        <Button Content="Preview on Mesh"/>
    </Grid>
</UserControl>
